{
	"name": "@jerzual/uoy",
	"version": "1.0.0",
	"description": "a rogue platformer",
	"main": "www/server.js",
	"scripts": {
		"dev": "vite",
		"dev:server": "ts-node src/server",
		"build": "vite build",
		"build:client": "vite build --outDir dist/client",
		"build:server": "vite build --outDir dist/server --ssr src/entry-server.ts ",
		"test": "vitest",
		"coverage": "vitest run --coverage",
		"lint": "eslint --ext=ts,tsx ./src",
		"lint:force": "eslint --cache --fix ./src",
		"format": "prettier --write './src/**/*' './e2e/**/*'",
		"e2e": "playwright test"
	},
	"keywords": [
		"platformer",
		"rogue-like",
		"pixi"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/jerzual/oy.git"
	},
	"bugs": {
		"url": "https://github.com/jerzual/oy/issues"
	},
	"author": "Benjamin Legrand <benjilegnard@protonmail.com>",
	"type": "module",
	"license": "MIT",
	"dependencies": {
		"@msgpack/msgpack": "^2.8.0",
		"canvas": "^2.11.2",
		"express": "^4.21.1",
		"matter-js": "^0.20.0",
		"nanoid": "^5.0.8",
		"pixi.js": "^8.5.2",
		"preact": "^10.24.3",
		"preact-async-route": "^2.2.1",
		"preact-router": "^4.1.2",
		"reactive-state": "^3.7.2",
		"reflect-metadata": "^0.1.14",
		"rot-js": "^2.2.0",
		"rxjs": "^7.8.1",
		"seedrandom": "^3.0.5",
		"socket.io": "^4.8.1",
		"socket.io-client": "^4.8.1",
		"webrtc-adapter": "^9.0.1"
	},
	"devDependencies": {
		"@playwright/test": "^1.48.2",
		"@preact/preset-vite": "^2.9.1",
		"@testing-library/preact": "^3.2.4",
		"@types/express": "^5.0.0",
		"@types/matter-js": "^0.19.7",
		"@types/node": "^20.17.6",
		"@types/seedrandom": "^3.0.8",
		"@types/supertest": "^6.0.2",
		"@typescript-eslint/eslint-plugin": "^8.13.0",
		"@typescript-eslint/parser": "^8.13.0",
		"@vitest/coverage-v8": "^2.1.4",
		"axe-core": "^4.10.2",
		"eslint": "^8.57.1",
		"eslint-config-preact": "^1.5.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-prettier": "^5.2.1",
		"eslint-plugin-react": "^7.37.2",
		"eslint-plugin-react-hooks": "^4.6.2",
		"eslint-plugin-vitest": "^0.5.4",
		"injection-js": "^2.4.0",
		"jsdom": "^25.0.1",
		"prettier": "^3.3.3",
		"sass": "^1.80.6",
		"supertest": "^7.0.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.6.3",
		"vite": "^5.4.10",
		"vite-plugin-eslint": "^1.8.1",
		"vitest": "^2.1.4"
	},
	"jest": {
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx"
		],
		"transform": {
			"^.+\\.(ts|(j|t)sx)$": "ts-jest"
		},
		"globals": {
			"ts-jest": {
				"tsConfig": "tsconfig.json"
			}
		},
		"testMatch": [
			"**/*.spec.(ts|tsx)"
		],
		"moduleNameMapper": {
			"\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
			"\\.(scss|css)$": "identity-obj-proxy"
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,css,json,md}": [
			"prettier --write",
			"git add"
		]
	}
}
