{
	"name": "@jerzual/uoy",
	"version": "1.0.0",
	"description": "a rogue platformer",
	"main": "www/server.js",
	"scripts": {
		"dev": "vite",
		"dev:server": "ts-node src/server",
		"build": "tsc && vite build",
		"build:client": "vite build --outDir dist/client",
		"build:server": "vite build --outDir dist/server --ssr src/server.ts ",
		"build:host": "",
		"test": "vitest",
		"coverage": "vitest run --coverage",
		"lint": "eslint --ext=ts,tsx .",
		"lint:force": "eslint --cache --fix .",
		"format": "prettier --write './src/**/*' './e2e/**/*'",
		"typedoc": "typedoc --out ./reports/documentation/ --verbose --exclude \"**/*.{spec.ts,scss}\" --includeDeclarations typings/ ./src/main.ts ",
		"e2e": "playwright test"
	},
	"keywords": [
		"platformer",
		"rogue-like",
		"pixi"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/jerzual/oy.git"
	},
	"bugs": {
		"url": "https://github.com/jerzual/oy/issues"
	},
	"author": "Benjamin Legrand <benjilegnard@protonmail.com>",
	"license": "MIT",
	"dependencies": {
		"@msgpack/msgpack": "^2.8.0",
		"canvas": "^2.11.2",
		"chance": "^1.1.11",
		"express": "^4.18.2",
		"matter-js": "^0.19.0",
		"nanoid": "^4.0.2",
		"pixi.js": "^7.3.1",
		"preact": "^10.18.1",
		"preact-async-route": "^2.2.1",
		"preact-router": "^4.1.2",
		"reactive-state": "^3.7.2",
		"reflect-metadata": "^0.1.13",
		"rot-js": "^2.2.0",
		"rxjs": "^7.8.1",
		"seedrandom": "^3.0.5",
		"socket.io": "^4.7.2",
		"socket.io-client": "^4.7.2",
		"webrtc-adapter": "^8.2.3"
	},
	"devDependencies": {
		"@cucumber/cucumber": "^9.5.1",
		"@playwright/test": "^1.38.1",
		"@preact/preset-vite": "^2.5.0",
		"@testing-library/preact": "^3.2.3",
		"@types/chance": "^1.1.4",
		"@types/express": "^4.17.18",
		"@types/matter-js": "^0.18.5",
		"@types/node": "^18.18.3",
		"@types/seedrandom": "^3.0.6",
		"@types/supertest": "^2.0.14",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"@vitest/coverage-v8": "^0.34.6",
		"axe-core": "^4.8.2",
		"cucumber-html-reporter": "^6.0.0",
		"eslint": "^8.50.0",
		"eslint-config-preact": "^1.3.0",
		"eslint-config-prettier": "^8.10.0",
		"eslint-plugin-import": "^2.28.1",
		"eslint-plugin-jsx-a11y": "^6.7.1",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"injection-js": "^2.4.0",
		"jsdom": "^22.1.0",
		"prettier": "^2.8.8",
		"sass": "^1.69.0",
		"supertest": "^6.3.3",
		"ts-node": "^10.9.1",
		"typedoc": "^0.25.1",
		"typescript": "^5.2.2",
		"vite": "^4.4.11",
		"vite-plugin-eslint": "^1.8.1",
		"vitest": "^0.32.1"
	},
	"jest": {
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx"
		],
		"transform": {
			"^.+\\.(ts|(j|t)sx)$": "ts-jest"
		},
		"globals": {
			"ts-jest": {
				"tsConfig": "tsconfig.json"
			}
		},
		"testMatch": [
			"**/*.spec.(ts|tsx)"
		],
		"moduleNameMapper": {
			"\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
			"\\.(scss|css)$": "identity-obj-proxy"
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,css,json,md}": [
			"prettier --write",
			"git add"
		]
	}
}
