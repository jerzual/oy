{
  "name": "@jerzual/uoy",
  "version": "1.0.0",
  "description": "a rogue platformer",
  "main": "www/server.js",
  "scripts": {
    "compile:client": "tsc",
    "compile:server": "tsc -p tsconfig.server.json",
    "build": "npm run build:client && npm run build:server",
    "build:client": "webpack -p",
    "build:server": "cross-env NODE_ENV=production webpack -p --config webpack.server.config.ts",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:ci": "jest --runInBand --coverage",
    "watch": "webpack-dev-server --progress --hot --colors --mode development",
    "watch:prod": "cross-env NODE_ENV=production webpack-dev-server --progress --colors --content-base dist/www --mode production",
    "watch:server": "nodemon --watch 'app/**/*.ts' --ignore 'app/**/*.spec.ts' --exec ts-node app/server.ts",
    "lint": "eslint --ext=ts,tsx .",
    "lint:force": "eslint --cache --fix .",
    "start": "webpack-dev-server",
    "typedoc": "typedoc --out ./reports/documentation/ --verbose --exclude \"**/*.{spec.ts,scss}\" --includeDeclarations typings/ ./app/main.ts ",
    "webdriver-start": "webdriver-manager start &",
    "webdriver-update": "webdriver-manager update",
    "protractor": "protractor",
    "stats": "webpack --json > stats.json",
    "e2e": "tsc protractor.conf.ts --outDir . --module CommonJS && protractor",
    "e2e:ci": "tsc protractor.conf.ts --outDir . && protractor --capabilities.chromeOptions.args=--headless --capabilities.chromeOptions.args=--no-sandbox",
    "prf": "artillery run prf/scenario.yml"
  },
  "keywords": [
    "platformer",
    "rogue-like",
    "pixi"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jerzual/oy.git"
  },
  "bugs": {
    "url": "https://github.com/jerzual/oy/issues"
  },
  "author": "jibhaine",
  "license": "MIT",
  "dependencies": {
    "@msgpack/msgpack": "^2.8.0",
    "canvas": "^2.10.0",
    "chance": "^1.1.5",
    "express": "^4.17.1",
    "inferno": "^7.4.2",
    "inferno-router": "^7.4.2",
    "inferno-server": "^7.4.2",
    "matter-js": "^0.14.2",
    "pixi.js": "^5.2.4",
    "preact": "^10.10.6",
    "preact-async-route": "^2.2.1",
    "preact-router": "^4.1.0",
    "pug": "^2.0.4",
    "reactive-state": "^3.5.0",
    "reflect-metadata": "^0.1.13",
    "rot-js": "^2.1.1",
    "rxjs": "^7.5.6",
    "seedrandom": "^3.0.5",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "uuid": "^8.0.0",
    "webrtc-adapter": "^7.6.0"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.3.1",
    "@testing-library/preact": "^3.2.2",
    "@types/artillery": "^1.6.2",
    "@types/chance": "^1.1.0",
    "@types/express": "^4.17.6",
    "@types/matter-js": "^0.14.3",
    "@types/node": "^16.0.0",
    "@types/pug": "^2.0.4",
    "@types/seedrandom": "^2.4.28",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "artillery": "^1.6.0",
    "axe-core": "^4.4.3",
    "cross-env": "^7.0.2",
    "cucumber": "^6.0.5",
    "cucumber-html-reporter": "^5.2.0",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.31.7",
    "identity-obj-proxy": "^3.0.0",
    "injection-js": "^2.3.0",
    "jsdom": "^20.0.0",
    "mkdirp": "^1.0.4",
    "prettier": "^2.7.1",
    "protractor": "^7.0.0",
    "protractor-cucumber-framework": "^6.2.1",
    "sass": "^1.54.8",
    "supertest": "^6.2.4",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.14",
    "typescript": "^4.7.0",
    "vite": "^3.1.0",
    "vitest": "^0.23.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.(ts|(j|t)sx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/*.spec.(ts|tsx)"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(scss|css)$": "identity-obj-proxy"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
