{
  "name": "oy",
  "version": "1.0.0",
  "description": "a rogue platformer",
  "main": "www/server.js",
  "scripts": {
    "build": "npm run build:client && npm run build:server",
    "build:client": "webpack",
    "build:server": "webpack --config webpack.server.config.js",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "serve": "webpack-dev-server --progress --hot --colors --mode development",
    "serve:prod": "webpack-dev-server --progress --colors --content-base www/ --mode production",
    "lint": "tslint --fix --force",
    "pretest": "npm run lint",
    "start": "node www/server.js",
    "typedoc": "typedoc --out ./www/doc/ ."
  },
  "keywords": [
    "platformer",
    "rogue-like",
    "pixi"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jerzual/oy.git"
  },
  "bugs": {
    "url": "https://github.com/jerzual/oy/issues"
  },
  "author": "jibhaine",
  "license": "MIT",
  "dependencies": {
    "chance": "^1.0.16",
    "express": "^4.16.4",
    "matter-js": "^0.14.2",
    "mithril": "^1.1.6",
    "mithril-express-middleware": "^1.1.11",
    "mithril-node-render": "^2.3.1",
    "mithril-tsx-component": "^3.0.0",
    "pixi.js": "^4.8.2",
    "pouchdb": "^6.3.4",
    "pug": "^2.0.3",
    "reactive-state": "^3.2.1",
    "rot-js": "^2.0.0",
    "rxjs": "^6.3.3",
    "seedrandom": "^2.4.4",
    "sockjs": "^0.3.19",
    "sockjs-client": "^1.3.0",
    "uuid": "^3.3.2",
    "webrtc-adapter": "^6.4.8"
  },
  "devDependencies": {
    "@types/chance": "^1.0.1",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.9",
    "@types/matter-js": "^0.10.2",
    "@types/mithril": "^1.1.13",
    "@types/node": "^10.12.10",
    "@types/pixi.js": "^4.8.3",
    "@types/pouchdb": "^6.3.2",
    "@types/pug": "^2.0.4",
    "@types/seedrandom": "^2.4.27",
    "@types/sockjs": "^0.3.31",
    "@types/sockjs-client": "^1.1.0",
    "@types/supertest": "^2.0.6",
    "@types/webpack": "^4.4.19",
    "autoprefixer": "^9.3.1",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^1.0.1",
    "css-modules": "^0.3.0",
    "file-loader": "^2.0.0",
    "fork-ts-checker-webpack-plugin": "^0.5.0",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.6.0",
    "jest-html-reporter": "^2.4.2",
    "json-loader": "^0.5.7",
    "log4js": "^3.0.6",
    "node-sass": "^4.10.0",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "supertest": "^3.3.0",
    "transform-loader": "^0.2.4",
    "ts-jest": "^23.10.4",
    "ts-loader": "^5.3.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.16.0",
    "typedoc": "^0.13.0",
    "typescript": "^3.1.6",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.26.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/*.spec.+(ts|tsx|js)"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(scss|css)$": "identity-obj-proxy"
    },
    "testResultsProcessor": "./node_modules/jest-html-reporter"
  }
}
