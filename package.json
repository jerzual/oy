{
  "name": "OY",
  "version": "1.0.0",
  "description": "a rogue platformer",
  "main": "www/server.js",
  "scripts": {
    "build": "webpack",
    "build:prod": "webpack --config webpack.config.prod.js",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "serve": "webpack-dev-server --progress --colors --content-base www/",
    "serve:prod": "webpack-dev-server --progress --colors --content-base www/ --config webpack.config.prod.js",
    "lint": "tslint",
    "pretest": "npm run lint",
    "postinstall": "webpack -p",
    "start": "node www/server.js"
  },
  "keywords": [
    "platformer",
    "rogue-like",
    "pixi"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jerzual/oy.git"
  },
  "bugs": {
    "url": "https://github.com/jerzual/oy/issues"
  },
  "author": "jibhaine",
  "license": "MIT",
  "dependencies": {
    "express": "^4.16.4",
    "matter-js": "^0.14.2",
    "mithril": "^1.1.6",
    "mithril-express-middleware": "^1.1.11",
    "mithril-node-render": "^2.3.1",
    "mithril-tsx-component": "^3.0.0",
    "pixi.js": "^4.0,0",
    "pouchdb": "^6.3.4",
    "pug": "^2.0.3",
    "rot-js": "^2.0.0",
    "rxjs": "^6.3.3",
    "socket.io": "^2.1.1",
    "uuid": "^3.3.2",
    "webrtc-adapter": "^6.4.8"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.9",
    "@types/mithril": "^1.1.13",
    "@types/node": "^10.12.10",
    "@types/socket.io": "^2.1.0",
    "@types/webpack": "^4.4.19",
    "css-loader": "^1.0.1",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.1",
    "json-loader": "^0.5.7",
    "node-sass": "^4.10.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "supertest": "^3.3.0",
    "transform-loader": "^0.2.4",
    "ts-jest": "^23.10.4",
    "ts-loader": "^5.3.0",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.26.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  }
}
