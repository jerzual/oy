{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "target": "es2017",
    "allowSyntheticDefaultImports": true,
    "lib": ["es2017", "dom"],
    "jsx": "preserve",
    "typeRoots": ["node_modules/@types/"],
    "types": ["node", "express", "supertest", "socket.io", "preact"]
  },
  "files": ["src/server.ts"],
  "include": ["typings/**/*"]
}
