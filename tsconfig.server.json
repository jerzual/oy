{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "target": "es2017",
    "allowSyntheticDefaultImports": true,
    "lib": ["es2017", "dom"],
    "jsx": "react",
    "jsxFactory": "m",
    "typeRoots": ["node_modules/@types/"],
    "types": ["node", "express", "supertest", "jest", "socket.io", "mithril"]
  },
  "include": ["app/server.ts", "typings/**/*", "app/**/*"]
}
