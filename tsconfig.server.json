{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "target": "es2017",
    "allowSyntheticDefaultImports": true,
    "lib": ["es2017", "dom"],
    "types": [
      "node",
      "express",
      "supertest",
      "jest",
      "sockjs",
      "sockjs-client",
      "mithril"
    ]
  },
  "include": ["app/server.ts", "typings/**/*", "app/**/*"]
}
