{
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "dist/",
    "target": "esnext",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es2017"],
    "jsx": "preserve",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types/"],
    "types": [
      "chance",
      "express",
      "jest",
      "matter-js",
      "inferno",
      "node",
      "pixi.js",
      "pug",
      "seedrandom",
      "socket.io",
      "socket.io-client",
      "supertest",
      "webpack",
      "webpack-dev-server"
    ]
  },
  "include": [
    "typings/declarations.d.ts",
    "app/main.tsx*",
    "app/**/*",
    "watcher.ts"
  ],
  "exclude": ["platforms", "node_modules", "protractor"]
}
